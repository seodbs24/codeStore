#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
    int num;

    printf("정수를 입력 하세요 : ");
    scanf("%d", &num);

    for (int i = 0; i < num; i++)
    {
        for (int j = i; j < num - 1; j++)
        {
            printf(" ");
        }
        for (int j = 0; j <= i * 2; j++)
        {
            printf("*");
        }
        printf("\n");
    }

    for (int i = num - 2; i >= 0; i--)
    {
        for (int j = i; j < num - 1; j++)
        {
            printf(" ");
        }
        for (int j = 0; j <= i * 2; j++)
        {
            printf("*");
        }
        printf("\n");

    }
    return 0;
}
